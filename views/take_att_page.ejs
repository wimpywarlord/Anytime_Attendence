*
{
    margin: 0;
    padding: 0;
}
#heading_box
{
   background-color:  #9BFF93;
}
#heading
{
    padding: 30px;
    font-family: 'Anton', sans-serif;
    font-size: 100px;
    color: white;
}
#att_box
{
    background-color: #FEE8D6;
    height: 120%;
}
.h1,h1
{
       margin-bottom: 0px;
}
.collection
{
    margin-top: 0;
}
#box_of_collection
{
    padding-top: 100px;
}
#att_name
{

}
#att_box_row_1
{
    /*border:2px solid red;*/
    padding-top: 25px;
    padding-left: 45px;
   font-family: 'Lobster', cursive; 
   font-size: 30px;
}
