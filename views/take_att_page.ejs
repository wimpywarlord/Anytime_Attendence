</head>
<body>
	
	<div id="heading_box">
		<center>
		<h1 id="heading">LETS TAKE SOME ATTENDENCE.</h1>
		</center>
	</div>
	<div id="att_box">
		<form action="/post_att" method="post">
			<div class="container" id="box_of_collection">
			<ul class="collection">
				<% for(var i=0;i< list_of_all_members.length ;i++) {  %>
						<li class="collection-item">
			      			<div class="row" id="att_box_row_1">
			      				<div class="col-lg-8" id="att_name">
			      					<%= list_of_all_members[i].name %>
			      				</div>
			      				<div class="col-lg-4">
			      					<div class="switch">
									    <label>
									      Absent
									      <input type="checkbox" name="student[<%= list_of_all_members[i].name %>]">
									      <span class="lever"></span>
									      Present
									    </label>
									 </div> 
			      				</div>
			      			</div>
			      		</li>
				<% } %>
    		</ul>
    		<center>
    		<br>
    		<br>
    		<br>
    		<br>
    		<div id="post_button">
    			<button type="submit" class="btn btn-outline-success btn-lg">POST ATTENDENCE</button>
    		</div>
    		</center>
    		

		</div>

		</form>
		
	</div>
</body>
